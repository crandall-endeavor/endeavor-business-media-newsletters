import emailX from "../config/email-x";

$ const { newsletter, date } = data;
$ const leaderboardPrimary = emailX.getAdUnit({ name: "leaderboardPrimary", alias: newsletter.alias });
$ const leaderboardSecondary = emailX.getAdUnit({ name: "leaderboardSecondary", alias: newsletter.alias });
$ const mrPrimary = emailX.getAdUnit({ name: "mrPrimary", alias: newsletter.alias });
$ const mrSecondary = emailX.getAdUnit({ name: "mrSecondary", alias: newsletter.alias });

$ const titleStyle = "font: bold 20px/30px 'Helvetica Neue', Helvetica, sans-serif; margin: 0;";
$ const titleTableStyle = titleStyle + "table-layout: fixed; mso-table-lspace: 0pt; mso-table-rspace: 0pt; width: 100%; color: #000; background-color: #eee;";
$ const featuredMainTableStyle = "background-color: #ebebeb";
$ const contentLinkStyle = {
  "font": "bold 18px/27px sans-serif",
  "color": "#0081ac",
  "text-decoration": "none"
};
$ const buttonStyle = "background-color: transparent;";
$ const buttonTextStyle = {
  "color": "#0081ac",
  "font": "bold 16px/32px Helvetica, sans-serif",
  "text-decoration": "underline"
};
$ const teaserStyle = {
  "color": "#000000",
  "font": "400 14px/21px sans-serif",
  "margin": "0",
  "padding": "0"
};

<marko-newsletter-root
  title=newsletter.name
  description=newsletter.description
  date=date
>
  <@head>
    <common-style-b-styles />
  </@head>
  <@body style="margin: 0px !important; padding: 0 !important; mso-line-height-rule: exactly; background-color: #efefef;">
    <common-table width="740" style="border-collapse:collapse; background-color: #ffffff;" align="center" class="main" padding=0 spacing=0>
      <tr>
        <td>
          <common-banner-element
            name=newsletter.name
            date=date
            teaser=newsletter.teaser
          />
          <common-style-b-image-only-header-block image-path="" date=date newsletter=newsletter />

          <common-section-spacer-element />

          <common-table width="700" style=titleTableStyle align="center" class="main" padding=0 spacing=0>
            <tr>
              <td>
                <h3 style=`${titleStyle}`>In This Issue</h3>
              </td>
            </tr>
          </common-table>

          <common-leaderboard-primary-block
            name=leaderboardPrimary
            date=date
          />

          <!-- #1 Title Content -->
          <common-style-b-title-only-block
            section-id=64760
            date=date
            newsletter=newsletter
            content-link-style=contentLinkStyle
          />

          <common-table width="700" style="border-collapse:collapse;" align="center" class="main" padding=0 spacing=0>
            <tr>
              <td width="300" align="left">
                <common-advertisement-element
                  name=mrPrimary
                  date=date
                />
              </td>
              <td width="300" align="right">
                <common-advertisement-element
                  name=mrSecondary
                  date=date
                />
              </td>
            </tr>
          </common-table>

          <!-- #2 Title/Teaser Content -->
          <common-style-b-title-teaser-block
            section-id=64762
            date=date
            newsletter=newsletter
            content-link-style=contentLinkStyle
            teaser-style=teaserStyle
          />

          <common-leaderboard-primary-block
            name=leaderboardSecondary
            date=date
          />

          <!-- #3 Text Promo -->
          <common-style-b-text-promo-wrapper
            section-id=64761
            date=date
            newsletter=newsletter
            button-style=buttonStyle
            button-text-style=buttonTextStyle
            content-link-style=contentLinkStyle
            main-table-style=featuredMainTableStyle
          />

          <!-- #4 Title/Teaser Content -->
          <common-style-b-title-teaser-block
            section-id=64763
            date=date
            newsletter=newsletter
            content-link-style=contentLinkStyle
            teaser-style=teaserStyle
          />

          <common-section-spacer-element />

          <common-style-b-footer-nav-block newsletter=newsletter/>

          <common-style-b-opt-out-block newsletter=newsletter />

        </td>
      </tr>
    </common-table>
  </@body>
</marko-newsletter-root>
